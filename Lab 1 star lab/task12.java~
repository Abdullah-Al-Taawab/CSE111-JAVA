import java.util.Scanner;
public class task12
{
  public static void main(String [] args)
  {
    Scanner sc=new Scanner(System.in);
    System.out.println("Enter a num");
    int line=sc.nextInt();
    int mid=(line+1)/2;
    for(int c=1;c<=mid;c++){
      for(int j=mid-1;j>=c;j--){
      System.out.print(" ");
      }
      for(int i=1;i<=(c*2)-1;i++){
        System.out.print("*");
      }
    System.out.println();
    }
    for(int p=1;p<=(mid-1);p++){
      for(int o=1;o<=p;o++){
        System.out.print(" ");
      }
      for(int s=1;s<=2*(mid-p)-1;s++){
        System.out.print("*");
      }
    System.out.println();
    }
  }
}

  
